<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".RegisterActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/gambar1"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:id="@+id/img_1"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_1"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:padding="30dp"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:id="@+id/ly_2">


        <EditText
            android:id="@+id/fullname"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/background"
            android:drawableRight="@drawable/baseline_clear_24"
            android:hint="Full Name"
            android:fontFamily="@font/abmedium"
            android:padding="22dp"
            android:textSize="16sp" />


        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/background"
            android:drawableRight="@drawable/baseline_check_circle_24"
            android:fontFamily="@font/abmedium"
            android:hint="Username"
            android:padding="22dp"
            android:paddingTop="20dp"
            android:textSize="16sp" />


        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/background"
            android:drawableRight="@drawable/baseline_clear_24"
            android:fontFamily="@font/abmedium"
            android:hint="Email"
            android:padding="22dp"
            android:paddingTop="20dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/background"
            android:drawableRight="@drawable/eye_icon_off_24"
            android:fontFamily="@font/abmedium"
            android:hint="Password"
            android:inputType="textPassword"
            android:longClickable="true"
            android:padding="22dp"
            android:paddingTop="20dp"
            android:paddingRight="10dp"
            android:textSize="16sp" />
    </LinearLayout>

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/ly_2"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/button"
            android:hint="Create Account"
            android:width="310dp"
            android:fontFamily="@font/abmedium"
            android:textAlignment="center"
            android:textColorHint="@color/white"
            android:textSize="20sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/button2"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account?  "
                android:fontFamily="@font/abmedium"
                android:textSize="14sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log in here "
                android:fontFamily="@font/abmedium"
                android:textSize="14sp"
                android:textColor="@color/button"
                />


        </LinearLayout>

</RelativeLayout>